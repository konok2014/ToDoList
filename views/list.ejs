<%-include("header")-%>
<div class="box" id="heading">
  <h1> <%=tday%> </h1>;

</div>

<div class="box">
  <%  atask.forEach(function(task){  %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=task._id%>" onChange="this.form.submit()">
      <p><%= task.name;%></p>
    </div>
    <input type="hidden"  name="listName" value="<%=tday%>">
  </form>
  <% })%>

  <form class="item" action="/" method="post">
    <input type="text" name="add" placeholder="Add your task" autocomplete="off">
    <button type="submit" name="list" value="<%=tday%>">+</button>
  </form>
</div>
<%-include("footer")-%>
